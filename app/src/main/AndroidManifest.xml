<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.lizl.com.psnine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".mvvm.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mvvm.activity.GameDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mvvm.activity.CupTipsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mvvm.activity.PostDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mvvm.activity.UserDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".mvvm.activity.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>